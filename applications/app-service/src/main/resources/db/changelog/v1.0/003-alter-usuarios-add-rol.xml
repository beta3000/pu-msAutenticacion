<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="003" author="ciro.rodriguez">
        <addColumn tableName="usuarios">
            <column name="id_rol" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </addColumn>
        <addForeignKeyConstraint baseTableName="usuarios"
                                 baseColumnNames="id_rol"
                                 constraintName="fk_usuarios_roles"
                                 referencedTableName="roles"
                                 referencedColumnNames="id_rol"/>
    </changeSet>

</databaseChangeLog>
